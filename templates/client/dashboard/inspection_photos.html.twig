{% extends 'base.html.twig' %}

{% block title %}Upload Inspection Photos{% endblock %}

{% block body %}
<div class="container-fluid">
    <div class="row mb-4">
        <div class="col-12">
            <div class="card">
                <div class="card-body">
                    <div class="d-flex justify-content-between align-items-center">
                        <h1 class="h3 mb-0">Upload Inspection Photos</h1>
                        <a href="{{ path('app_client_dashboard') }}" class="btn btn-secondary">Back to Dashboard</a>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <div class="row">
        <div class="col-12">
            <div class="card">
                <div class="card-body">
                    <div class="alert alert-info">
                        <i class="fas fa-info-circle me-2"></i>
                        Please upload photos after your entry has been tagged for inspection.
                    </div>

                    <form method="post" enctype="multipart/form-data" data-turbo="false">
                        <div class="mb-4">
                            <label for="entry" class="form-label">Select Entry</label>
                            <select class="form-select" id="entry" name="entry" required>
                                <option value="">Select an entry</option>
                                <option value="1">Entry #12345 - BAI</option>
                                <option value="2">Entry #12346 - BFAR</option>
                            </select>
                        </div>

                        <div class="mb-4">
                            <label for="photos" class="form-label">Inspection Photos</label>
                            <input type="file" class="form-control" id="photos" name="photos[]" multiple required>
                            <div class="form-text">You can select multiple photos. Supported formats: JPG, PNG, PDF</div>
                        </div>

                        <div class="d-flex justify-content-end gap-2">
                            <a href="{{ path('app_client_dashboard') }}" class="btn btn-secondary">Cancel</a>
                            <button type="submit" class="btn btn-primary">Upload Photos</button>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>
{% endblock %} 