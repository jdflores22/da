{% extends 'base.html.twig' %}

{% block title %}Notifications{% endblock %}

{% block body %}
<div class="container-fluid">
    <div class="row mb-4">
        <div class="col-12">
            <div class="card">
                <div class="card-body">
                    <div class="d-flex justify-content-between align-items-center">
                        <h1 class="h3 mb-0">Notifications</h1>
                        <div>
                            <button type="button" class="btn btn-primary me-2" data-bs-toggle="modal" data-bs-target="#createNotificationModal">
                                <i class="fas fa-plus me-2"></i>New Notification
                            </button>
                            <button type="button" class="btn btn-outline-primary" data-bs-toggle="modal" data-bs-target="#notificationSettingsModal">
                                <i class="fas fa-cog me-2"></i>Settings
                            </button>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <div class="row">
        <!-- Notification Statistics -->
        <div class="col-md-4">
            <div class="card mb-4">
                <div class="card-body">
                    <h5 class="card-title">Notification Statistics</h5>
                    <div class="row">
                        <div class="col-6 mb-3">
                            <div class="border rounded p-3 text-center">
                                <h6 class="text-muted mb-1">Total Notifications</h6>
                                <h3 class="mb-0">1,234</h3>
                            </div>
                        </div>
                        <div class="col-6 mb-3">
                            <div class="border rounded p-3 text-center">
                                <h6 class="text-muted mb-1">Unread</h6>
                                <h3 class="mb-0">45</h3>
                            </div>
                        </div>
                    </div>
                    <div class="mt-3">
                        <h6 class="text-muted mb-2">Notification Types</h6>
                        <div class="d-flex justify-content-between mb-1">
                            <span>System</span>
                            <span class="text-primary">523</span>
                        </div>
                        <div class="progress mb-2" style="height: 5px;">
                            <div class="progress-bar bg-primary" role="progressbar" style="width: 42%;"></div>
                        </div>
                        <div class="d-flex justify-content-between mb-1">
                            <span>Entry Updates</span>
                            <span class="text-success">456</span>
                        </div>
                        <div class="progress mb-2" style="height: 5px;">
                            <div class="progress-bar bg-success" role="progressbar" style="width: 37%;"></div>
                        </div>
                        <div class="d-flex justify-content-between mb-1">
                            <span>User Activity</span>
                            <span class="text-info">255</span>
                        </div>
                        <div class="progress mb-2" style="height: 5px;">
                            <div class="progress-bar bg-info" role="progressbar" style="width: 21%;"></div>
                        </div>
                    </div>
                </div>
            </div>

            <div class="card">
                <div class="card-body">
                    <h5 class="card-title">Quick Actions</h5>
                    <div class="d-grid gap-2">
                        <button type="button" class="btn btn-outline-primary">
                            <i class="fas fa-check-double me-2"></i>Mark All as Read
                        </button>
                        <button type="button" class="btn btn-outline-secondary">
                            <i class="fas fa-filter me-2"></i>Filter Unread
                        </button>
                        <button type="button" class="btn btn-outline-danger">
                            <i class="fas fa-trash me-2"></i>Clear All
                        </button>
                    </div>
                </div>
            </div>
        </div>

        <!-- Notification List -->
        <div class="col-md-8">
            <div class="card">
                <div class="card-body">
                    <!-- Filters -->
                    <div class="row mb-4">
                        <div class="col-md-3">
                            <label for="notification_type" class="form-label">Type</label>
                            <select class="form-select" id="notification_type">
                                <option value="">All Types</option>
                                <option value="system">System</option>
                                <option value="entry">Entry Updates</option>
                                <option value="user">User Activity</option>
                            </select>
                        </div>
                        <div class="col-md-3">
                            <label for="notification_status" class="form-label">Status</label>
                            <select class="form-select" id="notification_status">
                                <option value="">All Status</option>
                                <option value="unread">Unread</option>
                                <option value="read">Read</option>
                            </select>
                        </div>
                        <div class="col-md-3">
                            <label for="date_from" class="form-label">Date From</label>
                            <input type="date" class="form-control" id="date_from">
                        </div>
                        <div class="col-md-3">
                            <label for="date_to" class="form-label">Date To</label>
                            <input type="date" class="form-control" id="date_to">
                        </div>
                    </div>

                    <!-- Notification List -->
                    <div class="list-group">
                        <a href="#" class="list-group-item list-group-item-action unread" data-bs-toggle="modal" data-bs-target="#viewNotificationModal">
                            <div class="d-flex w-100 justify-content-between">
                                <h6 class="mb-1">New Entry Submission</h6>
                                <small class="text-muted">5 minutes ago</small>
                            </div>
                            <p class="mb-1">John Doe submitted a new entry for BAI inspection.</p>
                            <small class="text-muted">Entry #12345</small>
                        </a>
                        <a href="#" class="list-group-item list-group-item-action" data-bs-toggle="modal" data-bs-target="#viewNotificationModal">
                            <div class="d-flex w-100 justify-content-between">
                                <h6 class="mb-1">System Update</h6>
                                <small class="text-muted">1 hour ago</small>
                            </div>
                            <p class="mb-1">System maintenance completed successfully.</p>
                            <small class="text-muted">System</small>
                        </a>
                        <a href="#" class="list-group-item list-group-item-action unread" data-bs-toggle="modal" data-bs-target="#viewNotificationModal">
                            <div class="d-flex w-100 justify-content-between">
                                <h6 class="mb-1">Entry Status Update</h6>
                                <small class="text-muted">2 hours ago</small>
                            </div>
                            <p class="mb-1">Entry #12344 status changed to "For Payment".</p>
                            <small class="text-muted">Entry #12344</small>
                        </a>
                    </div>

                    <!-- Pagination -->
                    <nav aria-label="Notification pagination" class="mt-4">
                        <ul class="pagination justify-content-center">
                            <li class="page-item disabled">
                                <a class="page-link" href="#" tabindex="-1">Previous</a>
                            </li>
                            <li class="page-item active"><a class="page-link" href="#">1</a></li>
                            <li class="page-item"><a class="page-link" href="#">2</a></li>
                            <li class="page-item"><a class="page-link" href="#">3</a></li>
                            <li class="page-item">
                                <a class="page-link" href="#">Next</a>
                            </li>
                        </ul>
                    </nav>
                </div>
            </div>
        </div>
    </div>
</div>

<!-- Create Notification Modal -->
<div class="modal fade" id="createNotificationModal" tabindex="-1">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title">Create Notification</h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal"></button>
            </div>
            <div class="modal-body">
                <form>
                    <div class="mb-3">
                        <label for="notification_title" class="form-label">Title</label>
                        <input type="text" class="form-control" id="notification_title" required>
                    </div>
                    <div class="mb-3">
                        <label for="notification_type" class="form-label">Type</label>
                        <select class="form-select" id="notification_type" required>
                            <option value="system">System</option>
                            <option value="entry">Entry Update</option>
                            <option value="user">User Activity</option>
                        </select>
                    </div>
                    <div class="mb-3">
                        <label for="notification_message" class="form-label">Message</label>
                        <textarea class="form-control" id="notification_message" rows="3" required></textarea>
                    </div>
                    <div class="mb-3">
                        <label for="notification_recipients" class="form-label">Recipients</label>
                        <select class="form-select" id="notification_recipients" multiple>
                            <option value="all">All Users</option>
                            <option value="admin">Administrators</option>
                            <option value="bai">BAI Staff</option>
                            <option value="bfar">BFAR Staff</option>
                            <option value="bpi">BPI Staff</option>
                            <option value="client">Clients</option>
                        </select>
                    </div>
                    <div class="mb-3">
                        <label for="notification_priority" class="form-label">Priority</label>
                        <select class="form-select" id="notification_priority">
                            <option value="low">Low</option>
                            <option value="medium" selected>Medium</option>
                            <option value="high">High</option>
                        </select>
                    </div>
                    <div class="mb-3">
                        <div class="form-check">
                            <input class="form-check-input" type="checkbox" id="send_email">
                            <label class="form-check-label" for="send_email">Send Email</label>
                        </div>
                    </div>
                </form>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cancel</button>
                <button type="button" class="btn btn-primary">Create Notification</button>
            </div>
        </div>
    </div>
</div>

<!-- View Notification Modal -->
<div class="modal fade" id="viewNotificationModal" tabindex="-1">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title">Notification Details</h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal"></button>
            </div>
            <div class="modal-body">
                <dl class="row">
                    <dt class="col-sm-3">Title</dt>
                    <dd class="col-sm-9">New Entry Submission</dd>

                    <dt class="col-sm-3">Type</dt>
                    <dd class="col-sm-9"><span class="badge bg-primary">Entry Update</span></dd>

                    <dt class="col-sm-3">Priority</dt>
                    <dd class="col-sm-9"><span class="badge bg-warning">Medium</span></dd>

                    <dt class="col-sm-3">Timestamp</dt>
                    <dd class="col-sm-9">2024-03-15 14:30:25</dd>

                    <dt class="col-sm-3">Status</dt>
                    <dd class="col-sm-9"><span class="badge bg-secondary">Unread</span></dd>

                    <dt class="col-sm-3">Message</dt>
                    <dd class="col-sm-9">John Doe submitted a new entry for BAI inspection.</dd>

                    <dt class="col-sm-3">Related Entry</dt>
                    <dd class="col-sm-9">
                        <a href="#" class="text-decoration-none">Entry #12345</a>
                    </dd>
                </dl>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Close</button>
                <button type="button" class="btn btn-primary">Mark as Read</button>
            </div>
        </div>
    </div>
</div>

<!-- Notification Settings Modal -->
<div class="modal fade" id="notificationSettingsModal" tabindex="-1">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title">Notification Settings</h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal"></button>
            </div>
            <div class="modal-body">
                <form>
                    <div class="mb-3">
                        <label class="form-label">Email Notifications</label>
                        <div class="form-check">
                            <input class="form-check-input" type="checkbox" id="email_system" checked>
                            <label class="form-check-label" for="email_system">System Updates</label>
                        </div>
                        <div class="form-check">
                            <input class="form-check-input" type="checkbox" id="email_entry" checked>
                            <label class="form-check-label" for="email_entry">Entry Updates</label>
                        </div>
                        <div class="form-check">
                            <input class="form-check-input" type="checkbox" id="email_user">
                            <label class="form-check-label" for="email_user">User Activity</label>
                        </div>
                    </div>
                    <div class="mb-3">
                        <label class="form-label">In-App Notifications</label>
                        <div class="form-check">
                            <input class="form-check-input" type="checkbox" id="app_system" checked>
                            <label class="form-check-label" for="app_system">System Updates</label>
                        </div>
                        <div class="form-check">
                            <input class="form-check-input" type="checkbox" id="app_entry" checked>
                            <label class="form-check-label" for="app_entry">Entry Updates</label>
                        </div>
                        <div class="form-check">
                            <input class="form-check-input" type="checkbox" id="app_user" checked>
                            <label class="form-check-label" for="app_user">User Activity</label>
                        </div>
                    </div>
                    <div class="mb-3">
                        <label for="notification_retention" class="form-label">Notification Retention</label>
                        <select class="form-select" id="notification_retention">
                            <option value="7">7 days</option>
                            <option value="14">14 days</option>
                            <option value="30" selected>30 days</option>
                            <option value="90">90 days</option>
                        </select>
                    </div>
                </form>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cancel</button>
                <button type="button" class="btn btn-primary">Save Settings</button>
            </div>
        </div>
    </div>
</div>

{% block javascripts %}
<script>
document.addEventListener('DOMContentLoaded', function() {
    // Handle filter changes
    const filters = ['notification_type', 'notification_status', 'date_from', 'date_to'];
    filters.forEach(filter => {
        const element = document.getElementById(filter);
        if (element) {
            element.addEventListener('change', function() {
                // Apply filter logic here
            });
        }
    });

    // Handle date range
    const dateFrom = document.getElementById('date_from');
    const dateTo = document.getElementById('date_to');
    
    if (dateFrom && dateTo) {
        dateFrom.addEventListener('change', function() {
            dateTo.min = this.value;
        });
        
        dateTo.addEventListener('change', function() {
            dateFrom.max = this.value;
        });
    }

    // Handle notification type change
    const notificationType = document.getElementById('notification_type');
    if (notificationType) {
        notificationType.addEventListener('change', function() {
            // Update notification display based on selected type
        });
    }
});
</script>
{% endblock %}
{% endblock %} 