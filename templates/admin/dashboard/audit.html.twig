            format: 'YYYY-MM-DD'
        }
    });

    // Handle filter form submission
    const filterForm = document.querySelector('form');
    filterForm.addEventListener('submit', function(e) {
        e.preventDefault();
        // Implement filter logic
        console.log('Applying filters...');
    });
});
</script>
{% endblock %}
{% endblock %} 