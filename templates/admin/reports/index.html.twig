{% extends 'base.html.twig' %}

{% block title %}Reports{% endblock %}

{% block body %}
<div class="container-fluid">
    <div class="row mb-4">
        <div class="col-12">
            <div class="card">
                <div class="card-body">
                    <div class="d-flex justify-content-between align-items-center">
                        <h1 class="h3 mb-0">Reports</h1>
                        <a href="{{ path('admin_reports_new') }}" class="btn btn-primary">
                            <i class="fas fa-plus"></i> New Report
                        </a>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <div class="row">
        <div class="col-12">
            <div class="card">
                <div class="card-body">
                    <div class="table-responsive">
                        <table class="table table-hover">
                            <thead>
                                <tr>
                                    <th>Title</th>
                                    <th>Type</th>
                                    <th>Author</th>
                                    <th>Status</th>
                                    <th>Created</th>
                                    <th>Updated</th>
                                    <th>Actions</th>
                                </tr>
                            </thead>
                            <tbody>
                                {% for report in reports %}
                                <tr>
                                    <td>{{ report.title }}</td>
                                    <td>{{ report.type }}</td>
                                    <td>{{ report.user.fullName }}</td>
                                    <td>
                                        <span class="badge bg-{{ report.status == 'pending' ? 'warning' : (report.status == 'completed' ? 'success' : 'info') }}">
                                            {{ report.status|title }}
                                        </span>
                                    </td>
                                    <td>{{ report.createdAt|date('Y-m-d H:i:s') }}</td>
                                    <td>{{ report.updatedAt ? report.updatedAt|date('Y-m-d H:i:s') : '-' }}</td>
                                    <td>
                                        <a href="{{ path('admin_reports_edit', {id: report.id}) }}" class="btn btn-sm btn-warning">
                                            <i class="fas fa-edit"></i>
                                        </a>
                                        <form method="post" action="{{ path('admin_reports_delete', {id: report.id}) }}" class="d-inline" onsubmit="return confirm('Are you sure you want to delete this report?');">
                                            <input type="hidden" name="_token" value="{{ csrf_token('delete' ~ report.id) }}">
                                            <button class="btn btn-sm btn-danger">
                                                <i class="fas fa-trash"></i>
                                            </button>
                                        </form>
                                    </td>
                                </tr>
                                {% else %}
                                <tr>
                                    <td colspan="7" class="text-center">No reports found</td>
                                </tr>
                                {% endfor %}
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
{% endblock %} 