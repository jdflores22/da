{% extends 'base.html.twig' %}

{% block title %}Entries{% endblock %}

{% block body %}
<div class="container-fluid">
    <div class="row mb-4">
        <div class="col-12">
            <div class="card">
                <div class="card-body">
                    <div class="d-flex justify-content-between align-items-center">
                        <h1 class="h3 mb-0">Entries</h1>
                        <a href="{{ path('admin_entries_new') }}" class="btn btn-primary">
                            <i class="fas fa-plus"></i> New Entry
                        </a>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <div class="row">
        <div class="col-12">
            <div class="card">
                <div class="card-body">
                    <div class="table-responsive">
                        <table class="table table-hover">
                            <thead>
                                <tr>
                                    <th>Title</th>
                                    <th>Author</th>
                                    <th>Status</th>
                                    <th>Created</th>
                                    <th>Updated</th>
                                    <th>Actions</th>
                                </tr>
                            </thead>
                            <tbody>
                                {% for entry in entries %}
                                <tr>
                                    <td>{{ entry.title }}</td>
                                    <td>{{ entry.user.fullName }}</td>
                                    <td>
                                        <span class="badge bg-{{ entry.status == 'published' ? 'success' : 'warning' }}">
                                            {{ entry.status|title }}
                                        </span>
                                    </td>
                                    <td>{{ entry.createdAt|date('Y-m-d H:i:s') }}</td>
                                    <td>{{ entry.updatedAt ? entry.updatedAt|date('Y-m-d H:i:s') : '-' }}</td>
                                    <td>
                                        <a href="{{ path('admin_entries_show', {id: entry.id}) }}" class="btn btn-sm btn-info">
                                            <i class="fas fa-eye"></i>
                                        </a>
                                        <a href="{{ path('admin_entries_edit', {id: entry.id}) }}" class="btn btn-sm btn-warning">
                                            <i class="fas fa-edit"></i>
                                        </a>
                                        <form method="post" action="{{ path('admin_entries_delete', {id: entry.id}) }}" class="d-inline" onsubmit="return confirm('Are you sure you want to delete this entry?');">
                                            <input type="hidden" name="_token" value="{{ csrf_token('delete' ~ entry.id) }}">
                                            <button class="btn btn-sm btn-danger">
                                                <i class="fas fa-trash"></i>
                                            </button>
                                        </form>
                                    </td>
                                </tr>
                                {% else %}
                                <tr>
                                    <td colspan="6" class="text-center">No entries found</td>
                                </tr>
                                {% endfor %}
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
{% endblock %} 