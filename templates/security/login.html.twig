{% extends 'base.html.twig' %}

{% block title %}Login - Department of Agriculture{% endblock %}

{% block body %}
<div class="row justify-content-center">
    <div class="col-md-4 col-lg-4">
        <div class="card shadow-sm border-0 p-2">
            <div class="card-body p-4">
                <div class="text-center mb-4">
                    <h2 class="card-title fw-bold" style="color: var(--primary-color);">
                        <i class="fas fa-sign-in-alt me-2"></i>Login
                    </h2>
                    <p class="text-muted mb-0">Sign in to your Department of Agriculture Portal account</p>
                </div>
                <form method="post" action="{{ path('app_login_check') }}">
                    {% if error %}
                        <div class="alert alert-danger">
                            {% if error_message %}
                                {{ error_message }}
                            {% else %}
                                {{ error.messageKey|trans(error.messageData, 'security') }}
                            {% endif %}
                        </div>
                    {% endif %}
                    <div class="form-floating mb-3">
                        <input type="email" value="{{ last_username }}" name="_username" id="inputEmail" class="form-control" placeholder="Email" required autofocus>
                        <label for="inputEmail">Email</label>
                    </div>
                    <div class="form-floating mb-3">
                        <input type="password" name="_password" id="inputPassword" class="form-control" placeholder="Password" required>
                        <label for="inputPassword">Password</label>
                    </div>
                    <input type="hidden" name="_csrf_token" value="{{ csrf_token('authenticate') }}">
                    <div class="d-grid gap-2 mt-3">
                        <button class="btn login-btn btn-lg" type="submit">
                            <i class="fas fa-sign-in-alt me-2"></i>Login
                        </button>
                    </div>
                </form>
                <div class="text-center mt-3">
                    <a href="{{ path('app_forgot_password') }}" class="login-link text-decoration-none">Forgot Password?</a>
                </div>
                <div class="text-center mt-3">
                    <span class="text-muted">Don't have an account?</span>
                    <a href="{{ path('app_register') }}" class="login-link text-decoration-none ms-1">Register here</a>
                </div>
            </div>
        </div>
    </div>
</div>



{% endblock %} 