{% extends 'base.html.twig' %}

{% block title %}BPI Announcements{% endblock %}

{% block body %}
<div class="container-fluid">
    <div class="row">
        <!-- Sidebar -->
        <nav class="col-md-3 col-lg-2 d-md-block bg-light sidebar">
            <div class="position-sticky pt-3">
                <ul class="nav flex-column">
                    <li class="nav-item">
                        <a class="nav-link" href="{{ path('bpi_dashboard') }}">
                            <i class="fas fa-home"></i> Dashboard
                        </a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" href="{{ path('bpi_entries') }}">
                            <i class="fas fa-list"></i> Entries
                        </a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" href="{{ path('bpi_reports') }}">
                            <i class="fas fa-chart-bar"></i> Reports
                        </a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link active" href="{{ path('bpi_announcements') }}">
                            <i class="fas fa-bullhorn"></i> Announcements
                        </a>
                    </li>
                </ul>
            </div>
        </nav>

        <!-- Main content -->
        <main class="col-md-9 ms-sm-auto col-lg-10 px-md-4">
            <div class="d-flex justify-content-between flex-wrap flex-md-nowrap align-items-center pt-3 pb-2 mb-3 border-bottom">
                <h1 class="h2">BPI Announcements</h1>
            </div>

            <!-- Announcements List -->
            <div class="row">
                <div class="col-12">
                    {% for announcement in announcements %}
                    <div class="card mb-4">
                        <div class="card-header d-flex justify-content-between align-items-center">
                            <h5 class="card-title mb-0">{{ announcement.title }}</h5>
                            <small class="text-muted">{{ announcement.date|date('F j, Y') }}</small>
                        </div>
                        <div class="card-body">
                            <p class="card-text">{{ announcement.content }}</p>
                            {% if announcement.attachments is not empty %}
                            <div class="mt-3">
                                <h6>Attachments:</h6>
                                <ul class="list-unstyled">
                                    {% for attachment in announcement.attachments %}
                                    <li>
                                        <a href="{{ attachment.url }}" target="_blank">
                                            <i class="fas fa-paperclip"></i> {{ attachment.name }}
                                        </a>
                                    </li>
                                    {% endfor %}
                                </ul>
                            </div>
                            {% endif %}
                        </div>
                        <div class="card-footer text-muted">
                            <small>Posted by: {{ announcement.author }}</small>
                        </div>
                    </div>
                    {% else %}
                    <div class="alert alert-info">
                        <i class="fas fa-info-circle"></i> No announcements available at this time.
                    </div>
                    {% endfor %}
                </div>
            </div>
        </main>
    </div>
</div>
{% endblock %} 